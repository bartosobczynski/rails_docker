<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="alerts">
      <% flash.each do |type, content| %>
        <div class="<%= type %>"><%= content %></div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
